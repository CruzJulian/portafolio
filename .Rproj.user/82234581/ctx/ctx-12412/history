library("knitr")
library("readr")
library("stringr")
opts_chunk$set(echo = FALSE)
carpeta_contenidos <- "."
file.path(
carpeta_contenidos,
dir(
carpeta_contenidos,
pattern = "rmd"
)
) %>%
lapply(read_lines) %>%
lapply(str_replace_all, "[*]", "") -> childs
childs
dir()
archivos <- dir(
carpeta_contenidos,
pattern = "rmd"
)
archivos
archivos <- dir(
carpeta_contenidos,
pattern = "md"
)
archivos
